</style>
<a anch="{{ section.settings.anchor }}" id="{{ section.settings.anchor }}-anch" class="allAnchors"></a>
<div class=" labelstyle {% if template contains 'reviews' %}come-in{% else %}applyAnimation{% endif %} evenContainer">
  {% if section.settings.subtext != blank %}
            <label class="{% if template contains 'reviews' %}come-in-3{% else %}come-in-1{% endif %} subtext-{{ section.id }} GT-{{ section.settings.subtextWeight }}">
              {{ section.settings.subtext }}
      		</label>


  
            <style>
              .subtext-{{ section.id }} {
                margin: 0; 
                letter-spacing: {{ section.settings.subtextLetter }}px; 
              
                color: {{ section.settings.subtextColor }}; 
               
                text-align: {{ section.settings.subtextAlign }};
               
             
              }


                 @media only screen and (min-width:1009px)  {
           .subtext-{{ section.id }} {
                
                font-size: {{ section.settings.subtextSize | times: 100 | divided_by: 1440.0 }}vw; 
                line-height: {{ section.settings.subtextLine | times: 100 | divided_by: 1440.0 }}vw;
                margin-bottom: {{ section.settings.subtextMarBottom | times: 100 | divided_by: 1440.0 }}vw;
           }
        }

  
          
               @media only screen and (max-width:1008px) { .subtext-{{ section.id }} {
                  margin: 0; 
                  letter-spacing: {{ section.settings.subtextLetterMob }}px; 
