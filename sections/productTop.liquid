<script>
  $(document).ready(function(){
  	$(window).scroll(function(){
    if($(window).scrollTop() >= $('.product-single__add-to-cart').offset().top){
          $(".stickyCart").addClass("active");
    }else{
    	$(".stickyCart").removeClass("active");
    }
    });
  });
</script>
