<div itemscope itemtype="http://schema.org/Product" id="ProductSection--{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-section-type="product-template"
  data-image-zoom-type="{{ section.settings.enable_image_zoom }}"
  data-enable-history-state="true"
  data-stacked-layout="{% if section.settings.media_layout == "stacked" %}true{% else %}false{% endif %}"
  {% if first_3d_model %}data-has-model="true"{% endif %} class="productTop flexDiv">
  <div class="productTopLeft">
    <div style="position: sticky; top: -100px;" class="productImageHolder">
    	<img class="mainImg fullWidth" src="{{ product.featured_image | img_url: "300x" }}">
      	<img class="mainImgAn" src="{{ product.featured_image | img_url: "1200x" }}">
      <div class="productThumbnails">
      	{% for img in product.images %}
        	<img class="fullWidth productThumbnail {% if forloop.first %}active{% endif %}" source="{{ img | img_url: '1200x' }}" src="{{ img | img_url: '400x' }}">
        {% endfor %}
      </div>
    </div>
    <script>
      $(".productThumbnail").click(function(){
      	$(".productThumbnail").removeClass("active");
        $(this).addClass("active");
        $(".mainImgAn").fadeOut();
        setTimeout(function(){ 
        $(".mainImg").attr("src",$(".productThumbnail.active").attr("src"));
        $(".mainImgAn").attr("src",$(".productThumbnail.active").attr("source"));
        $(".mainImgAn").fadeIn(); 
        }, 400);
      });
    </script>
  </div>
  <div class="productTopRight">
