            <path d="M20.9609 32.5547L30.9765 22.5392" stroke="{{ section.settings.title1Color }}" stroke-width="2"/>
            <path d="M21.7665 22.2535H31.2608V31.7478" stroke="{{ section.settings.title1Color }}" stroke-width="2"/>
            </svg>
            <div style="min-height: 52px; color: {{ section.settings.title1Color }};" class="GT-600">{{ section.settings.linkText1 }}</div>
          </div>
            {% endif %}
          </div>
      	</div>
  	</div>
    <div onclick="location.href='{{ section.settings.link2 }}'" style="cursor: pointer;" class="evenCol">
