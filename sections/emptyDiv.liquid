{% assign split1 = section.id | split: "--"  %}
{% assign split2 = split1 | last| split: "__"  %}


<style>
  #shopify-section-{{ section.id }} {
    height: {{ section.settings.height }}vw;
    background: transparent;
    pointer-events: none;
  }
  @media only screen and (max-width: 1009px) {
    #shopify-section-{{ section.id }} {
      {% if template contains "index" or template contains 'collection' %}
     height: 0;
     display: none!important;
      {% endif %}
       height: 110vh;
    }
  }
</style>
<script>
  
  $(document).ready(function(){
    var windowsize = $(window).width(),
        elem=$(".emptyDiv.emptyDivAbout"),
        top_position = elem.prev().position().top+elem.prev().outerHeight(true);

    if(windowsize <= 1009){
      $(elem).css("height",top_position);
      $(".stickyAbout").css("top",top_position);
      
    }
  });
    
    //$(".aboutMain.come-in").position().top + $(".aboutMain.come-in").outerHeight(true)
</script>
